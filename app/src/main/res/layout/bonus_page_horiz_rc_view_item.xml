<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/horiz_rc_view_item_background"
    android:padding="10dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/horizRcVieItemIcon"
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dram_icon"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/horizRcViewItemTvView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:gravity="center"
        android:text="Մարքեթ"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/horizRcVieItemIcon"
        app:layout_constraintLeft_toRightOf="@id/horizRcVieItemIcon"
        app:layout_constraintTop_toTopOf="@id/horizRcVieItemIcon" />
</androidx.constraintlayout.widget.ConstraintLayout>