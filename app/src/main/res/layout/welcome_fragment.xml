<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iconImView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/descriptionTvView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="The ART of payments"
        android:textColor="@color/grey"
        app:layout_constraintLeft_toLeftOf="@id/iconImView"
        app:layout_constraintRight_toRightOf="@id/iconImView"
        app:layout_constraintTop_toBottomOf="@id/iconImView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/enterButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/enter_button_background"
        android:text="Enter to Telcell Wallet"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/russianLenTvView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Русский"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/enterButton"
        app:layout_constraintLeft_toLeftOf="@id/enterButton" />

    <TextView
        android:id="@+id/armenianLenTvView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Հայերեն"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/enterButton"
        app:layout_constraintLeft_toRightOf="@id/russianLenTvView"
        app:layout_constraintRight_toLeftOf="@id/englishLenTvView" />

    <TextView
        android:id="@+id/englishLenTvView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="English"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/enterButton"
        app:layout_constraintRight_toRightOf="@id/enterButton" />
</androidx.constraintlayout.widget.ConstraintLayout>