<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/discountImView"
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:layout_margin="10dp"
        android:background="@drawable/discount_image_background"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/discount_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        app:layout_constraintRight_toRightOf="@id/discountImView"
        android:id="@+id/discountInfoTvView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/discount_info"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@id/discountImView"
        app:layout_constraintTop_toTopOf="@id/discountImView" />
</androidx.constraintlayout.widget.ConstraintLayout>