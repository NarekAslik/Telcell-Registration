<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/serviceItemConstraint"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:background="@drawable/service_item_constraint_background"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iconImage"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/dram_icon"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="@id/serviceItemConstraint"
        app:layout_constraintTop_toTopOf="@id/serviceItemConstraint"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/serviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/service_name"
        android:textColor="@color/black"
        android:textSize="@dimen/description_size"
        app:layout_constraintLeft_toLeftOf="@id/iconImage"
        app:layout_constraintTop_toBottomOf="@id/iconImage" />
</androidx.constraintlayout.widget.ConstraintLayout>