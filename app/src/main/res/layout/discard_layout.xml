<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/discardTitleTvView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure?"
        android:textColor="#324148"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/discardInfoTvView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Do you want to close the card? Please note that after closing the card, you will not be able to recover it, but the bank account will remain active, and the remaining card balance, if available, will be retained in your account."
        android:textColor="#647183"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="@+id/discardTitleTvView"
        app:layout_constraintRight_toRightOf="@id/discardTitleTvView"
        app:layout_constraintTop_toBottomOf="@id/discardTitleTvView" />

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/white"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textColor="#FF7052"
        app:layout_constraintRight_toRightOf="@id/discardInfoTvView"
        app:layout_constraintTop_toBottomOf="@id/discardInfoTvView" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="18dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/white"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="#A7B4B9"
        app:layout_constraintBaseline_toBaselineOf="@+id/confirmButton"
        app:layout_constraintRight_toLeftOf="@+id/confirmButton" />
</androidx.constraintlayout.widget.ConstraintLayout>